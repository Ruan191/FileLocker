<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="File_Locker.Views.FilesPage">

    <ScrollView>
        <VerticalStackLayout  
            Padding="30,0"  
            Spacing="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Entry Placeholder="Search" Margin="0,10,0,10" Grid.Column="0" VerticalOptions="Start" />
                <Image Source="search_icon.png" HeightRequest="30" WidthRequest="30" Grid.Column="1" VerticalOptions="Center" />
            </Grid>
            <Label Text="Folder Name" Padding="0,10,10,10" Grid.Column="1" HorizontalOptions="Start" />
            <Frame Padding="2">
                <Grid ColumnSpacing="4" VerticalOptions="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Image Source="file_icon.png" HeightRequest="30" WidthRequest="30" Grid.Column="0" HorizontalOptions="Start" />
                    <Label Text="File" Padding="0,10,10,10" Grid.Column="1" HorizontalOptions="Start" />
                </Grid>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>